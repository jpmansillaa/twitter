<p style="color: green"><%= notice %></p>

<% content_for :title, "Users" %>

<div class="my-5">
  <%= form_with url: users_path, method: :get do |form| %>
    <%= form.text_field :query_text, placeholder: "Buscador", value: params[:query_text]%>
    <%= form.submit "Buscar", class:"btn btn-primary" %>
  <% end %>
</div>

<h1 class="text-center my-5">Usuarios de Twitter</h1>

<table class="table mb-5">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">name</th>
      <th scope="col">description</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td> <%= user.id %></td>
      <td> <%= user.name %></td>
      <td> <%= user.description %></td>
      <td class="d-flex gap-5">
        <%= link_to "Ir a perfil", user, class:"btn btn-secondary"%>
        <%= link_to "Like", edit_user_path(user), class:"btn btn-warning" %>
        <%= button_to "Bloquear a Usuario", @user, method: :delete, class:"btn btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="mb-5 d-flex justify-content-center">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>



